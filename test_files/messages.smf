setup {
    style {
        centered {
            padding: rect_all(40px)
            direction: Vertical
            gap: 40px
        }

        item {
            padding: rect_xy(20px, 4px)
            foregroundColor: rgb(255, 255, 255)
            textAlign: Center
        }

        left {
            backgroundColor: rgb(59, 59, 61)
            radius: rect(40px, 40px, 40px, 40px)
        }

        right {
            backgroundColor: rgb(11, 132, 255)
            radius: rect(40px, 40px, 40px, 40px)
            align: Center
        }
    }
}

use setup.style

view (class: centered) {
    view (class: [left, item]) {
        :Hello! I'm oliver
    }

    view (class: [right, item]) {
        :Hi how are you
    }

    view (class: [left, item]) {
        :What time will you be home
    }

    view (class: [right, item]) {
        :I do not know yet
    }

    view (class: [left, item]) {
        :Well please let me know as soon as possible
    }


    view (class: [right, item]) {
        :Ok
    }

    view (class: [right, item]) {
        :probably in like ten minutes
    }
}